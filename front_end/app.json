{
    "expo": {
        "name": "exercise",
        "slug": "exercise",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "exercise",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "splash": {
            "image": "./assets/images/new-splash-icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "fonts": {
            "Poppins-Regular": "./assets/fonts/Poppins/Poppins-Regular.ttf",
            "Poppins-Medium": "./assets/fonts/Poppins/Poppins-Medium.ttf",
            "Poppins-SemiBold": "./assets/fonts/Poppins/Poppins-SemiBold.ttf",
            "Poppins-Bold": "./assets/fonts/Poppins/Poppins-Bold.ttf"
        },
        "ios": {
            "supportsTablet": true
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "package": "com.exercise.app",
            "permissions": ["VIBRATE"],
            "versionCode": 1
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/new-splash-icon.png",
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff"
                }
            ],

            [
                "expo-av",
                {
                    "microphonePermission": false
                }
            ],
            [
                "expo-notifications",
                {
                    "icon": "./assets/images/notification-icon.png",
                    "color": "#ffffff",
                    "sounds": [
                        "./assets/sounds/alert.mp3",
                        "./assets/sounds/notifications.mp3"
                    ]
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "Application needs permission to access your photos to select an image"
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true,
            "tsconfigPaths": true
        }
    }
}
