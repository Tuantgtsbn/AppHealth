{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["app/*"],
            "@assets/*": ["assets/*"],
            "@hooks/*": ["hooks/*"],
            "@contexts/*": ["contexts/*"],
            "@types/*": ["types/*"],
            "@services/*": ["services/*"],
            "@config/*": ["config/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "nativewind-env.d.ts"
    ]
}
